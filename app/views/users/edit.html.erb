<div class ="container my-5">
  <div class ="row ml-3">
    <div class ="offset-sm-1">
      <h3 class ="bg-warning"><%= @nickname %></h3>
    </div>
  </div>


  <%= form_with model: @user, url: user_path, method: :patch do |f| %>
      <div class ="row mt-5 ml-5">
        <div class ="col-sm-10">

          <div class ="form-group row">
            <%= f.label :"ニックネーム", class:"col-sm-2"%>
            <%= f.text_field :nickname, autofocus: true, class: "form-control offset-sm-1 col-sm-4" %>
          </div>
          <div class="form-group row">
            <%= f.label :"メールアドレス", class:"col-sm-2" %>
            <%= f.email_field :email, autocomplete: "email", class: "form-control offset-sm-1 col-sm-4" %>
          </div>
          <div class="form-group row">
            <%= f.label :"公開ステータス", class:"col-sm-2" %>
            <label><%= f.radio_button :status, :false, class: "ml-5" %>非公開</label>
            <label><%= f.radio_button :status, :true, class: "ml-4" %>公開</label>
          </div>

          <div class ="row actions">
            <%= f.submit "編集内容を保存", class:"btn btn-success offset-sm-3 col-sm-3 my-4" %>
            <%= link_to "退会する", users_unsubscribe_path(@user), class: "btn btn-danger offset-sm-2 col-sm-3 my-4" %>
          </div>
        </div>
      </div>
  <% end %>
</div>