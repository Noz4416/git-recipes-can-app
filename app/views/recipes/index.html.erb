<%= flash[:notice] %>

<% if user_signed_in? %>
  <div class ="container m-4">
    <div class ="row my-3">
      <h3>レシピ一覧</h3>
        <table class ="table table-hover">
          <% @recipes.each do |recipe| %>
            <tr class ="font-weight-bold">
              <td class ="col-2">
                <%= image_tag recipe.get_image(80,80) %>
              </td>
              <td class ="col-10">
                <%= link_to recipe.cuisine_name, recipe_path(recipe.id)%>
              </td>
            </tr>
           <% end %>
        </table>
    </div>
  </div>
<% else %>
  <%= render "top" %>
<% end %>