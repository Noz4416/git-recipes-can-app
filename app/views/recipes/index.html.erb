<%= flash[:notice] %>

<% if user_signed_in? %>
  <div class ="container m-4">
    <div class ="row my-3">
      <h3>レシピ一覧</h3>
        <table class ="table table-hover">
          <% @recipes.each do |recipe| %>
            <tr class ="font-weight-bold">
              <td class ="col-2">
                <%= image_tag recipe.get_image(80,80) %>
              </td>
              <td class ="col-10">
                <%= link_to recipe.cuisine_name, recipe_path(recipe.id)%>
              </td>
            </tr>
           <% end %>
        </table>
    </div>
  </div>
<% else %>
  <div class ="container m-5">
    <div class ="row">
      <h1 class ="offset-sm-2 col-sm-10 my-5 font-weight-bold">Recipes_Can</h1>
    </div>
    <div class ="row my-5">
      <div class ="d-grid gap-2 col-7 mx-auto my-3">
        <%= link_to "お試しログイン", users_guest_sign_in_path, method: :post, class:"btn btn-lg btn-success mb-4 col-12" %>
        <%= link_to "新規登録", new_user_registration_path, class:"btn btn-lg btn-primary mb-5 col-12" %>
      </div>
    </div>
  </div>
<% end %>