<div class ="container my-5">
  <div class ="row ml-3">
    <div class ="offset-sm-1">
      <h3>会員登録</h3>
    </div>
  </div>

  <%= form_with model:@user, url:user_registration_path do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
      <div class ="row mt-5 ml-5">
        <div class ="col-sm-12">

          <div class ="form-group row">
            <%= f.label :"ニックネーム", class:"col-sm-2"%>
            <%= f.text_field :nickname, autofocus: true, class:"form-control offset-sm-1 col-sm-4" %>
          </div>

          <div class ="form-group row">
            <%= f.label :"メールアドレス", class:"col-sm-2" %>
            <%= f.email_field :email, autocomplete: "email", class:"form-control offset-sm-1 col-sm-4" %>
          </div>

          <div class ="form-group row">
            <div class ="col-sm-3">
              <%= f.label :"パスワード" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %>文字以上)</em>
              <% end %>
            </div>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control col-sm-4" %>
          </div>

          <div class ="form-group row">
            <%= f.label :"パスワード (確認用)", class:"col-sm-3" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control col-sm-4"  %>
          </div>

          <div class="actions row mb-4">
            <%= f.submit "新規登録", class:"btn btn-success offset-sm-3 col-sm-3 mt-4" %>
          </div>
        </div>
      </div>
    <% end %>

    <div class ="row mt-5 ml-2">
      <div class ="offset-sm-1">
        <h3>会員登録がお済みの方は</h3>
      </div>
    </div>
    <div class ="row my-3">
      <div class ="offset-sm-1">
        <h4><%= render "devise/shared/links" %>からログインしてください。</h4>
      </div>
    </div>
</div>