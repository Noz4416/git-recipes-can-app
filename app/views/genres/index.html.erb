<div class="container my-5">
  <div class="row ml-5">
    <h2>ジャンル一覧・追加</h2>
  </div>


  <%= form_with model: @genre, url: genres_path, method: :post do |f| %>
    <div class="row mt-5">
      <div class="col-8">
        <div class="form-group row">
          <%= f.label :"ジャンル名", class: "col-2" %>
          <%= f.text_field :name, class: "form-control col-5" %>
          <%= f.submit "新規登録", class: "btn btn-success ml-5" %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row mt-5">
    <div class="col-5">
      <table class="table table-hover text-center">
        <thead>
          <tr class="table-secondary">
            <th>ジャンル</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "削除する", genre_path(genre.id), method: :delete, class: "btn btn-success ml-5"%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>