<table class ="table table-hover">
  <% @recipes.each do |recipe| %>
    <tr class ="font-weight-bold">
      <td class ="col-2">
        <%= image_tag recipe.get_image(80,80) %>
      </td>
      <td class ="col-6">
        <%= link_to recipe.cuisine_name, recipe_path(recipe.id)%>
      </td>
      <% if recipe.user.status %>
        <td class ="col-4"><%= recipe.user.nickname %></td>
      <% else %>
        <td class ="col-4">非公開</td>
      <% end %>
    </tr>
  <% end %>
</table>
